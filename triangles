#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


int main() 
{
	setlocale(LC_ALL, "Russian");
	float a, b, c, a1, b1, c1;
	printf("введите стороны первого треугольника в порядке убывания длины\n"); 
	scanf("%f%f%f", &a, &b, &c);
	printf("введите стороны второго треугольника в порядке убывания длины\n"); 
	scanf("%f%f%f", &a1, &b1, &c1);
	if (a/a1==b/b1 && b/b1==c/c1) printf("треугольники подобны"); \
		else printf("треугольники не подобны");
		
	
	
	
	return 0;
}
