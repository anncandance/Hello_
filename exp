#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>

int main() 
{
	setlocale(LC_ALL, "Russian");
	float x, dy, sum;
	sum = dy = 1.0;
	int i=1;
	scanf("%f", &x);
	const float e=2.7182818;
	for(i; (dy >=pow(10, -6)); (i++)) {dy = dy*(x/i); sum += dy;};
	printf("%f", sum);
	
		
		
}
